<?xml version="1.0" ?>
<robot name="r4c_tractor" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find r4c_description)/urdf/tractor_nh_macro.xacro"/>
  <xacro:include filename="$(find r4c_description)/urdf/agcbox_macro.xacro"/>
  <xacro:include filename="$(find r4c_description)/urdf/r4c_tractor_sensors_platform_macro.xacro"/>
  <xacro:include filename="$(find r4c_description)/urdf/lidar_2d_macro.xacro"/>
  <xacro:include filename="$(find r4c_description)/urdf/lidar_3d_macro.xacro"/>
  <xacro:include filename="$(find r4c_description)/urdf/imu_macro.xacro"/>
