  <xacro:include filename="$(find r4c_description)/urdf/ublox_macro.xacro"/>

  <xacro:tractor_nh config_file="$(find r4c_description)/config/tractor_nh_t4_110f.yaml"/>
  <xacro:agcbox config_file="$(find r4c_description)/config/agcbox_lsp_es.yaml"/>
  <xacro:lidar_2d config_file="$(find r4c_description)/config/hokuyo_lidar_lsp_es.yaml"/>
